{
    "rules": {
        "callback-return": [2, ["callback", "cb", "next", "done"]],
        "comma-dangle": [2, "never"],
        "consistent-return": 2,
        "curly": 2,
        "dot-notation": 2,
        "dot-location": [2, "property"],
        "eqeqeq": 2,
        "guard-for-in": 2,
        "handle-callback-err": 1,
        "no-caller": 2,
        "no-empty": 2,
        "no-eval": 2,
        "no-ex-assign": 2,
        "no-extend-native": 2,
        "no-extra-bind": 2,
        "no-extra-boolean-cast": 2,
        "no-floating-decimal": 2,
        "no-implied-eval": 2,
        "no-invalid-this": 2,
        "no-labels": 2,
        "no-lone-blocks": 2,
        "no-loop-func": 2,
        "no-mixed-requires": 2,
        "no-multi-spaces": 2,
        "no-multi-str": 2,
        "no-native-reassign": 2,
        "no-new-func": 2,
        "no-new-require": 2,
        "no-new-wrappers": 2,
        "no-param-reassign": 2,
        "no-path-concat": 2,
        "no-redeclare": 2,
        "no-return-assign": 2,
        "no-script-url": 2,
        "no-self-compare": 2,
        "no-sequences": 2,
        "no-throw-literal": 2,
        "no-useless-call": 2,
        "no-useless-concat": 2,
        "no-undef": 2,
        "no-unreachable": 2,
        "no-unused-vars": 2,
        "no-use-before-define": 2,
        "no-shadow": 2,
        "no-with": 2,
        "strict": [2, "global"],
        "vars-on-top": 2,
        "wrap-iife": 2,

        // style
        "brace-style": [2, "1tbs", { "allowSingleLine": true }],
        "camelcase": [2, {"properties": "never"}],
        "comma-spacing": [2, {"before": false, "after": true}],
        "comma-style": [2, "last"],
        "eol-last": 2,
        "indent": [2, 4],
        "key-spacing": [2, {"beforeColon": false, "afterColon": true}],
        "lines-around-comment": [2, { "beforeBlockComment": true, "beforeLineComment": true }],
        "linebreak-style": [2, "unix"],
        "new-cap": 2,
        "new-parens": 2,
        "newline-after-var": 2,
        "no-array-constructor": 2,
        "no-inline-comments": 2,
        "no-lonely-if": 2,
        "no-mixed-spaces-and-tabs": 2,
        "no-multiple-empty-lines": 2,
        "no-nested-ternary": 2,
        "no-new-object": 2,
        "no-spaced-func": 2,
        "no-trailing-spaces": 2,
        "no-underscore-dangle": 2,
        "one-var": [2, "never"],
        "quote-props": [2, "as-needed", {"keywords": true}],
        "quotes": [2, "single"],
        "semi-spacing": [2, {"before": false, "after": false}],
        "semi": [2, "always"],
        "space-after-keywords": [2, "always"],
        "space-before-keywords": [2, "always"],
        "space-before-blocks": 2,
        "space-infix-ops": 2,
        "space-return-throw-case": 2,
        "spaced-comment": [2, "always"],

        // ES6
        "arrow-parens": 2,
        "arrow-spacing": 2,
        "constructor-super": 2,
        "no-class-assign": 2,
        "no-const-assign": 2,
        "no-dupe-class-members": 2,
        "no-this-before-super": 2,
        "no-var": 2,
        "object-shorthand": 1,
        "prefer-arrow-callback": 2,
        "prefer-const": 2,
        "prefer-spread": 2,
        "prefer-template": 2
    },
    "env": {
        "node": true,
        "es6": true
    },
    "ecmaFeatures": {
        "arrowFunctions": true,
        "blockBindings": true,
        "classes": true,
        "defaultParams": true,
        "destructuring": true,
        "modules": true,
        "objectLiteralShorthandMethods": true,
        "objectLiteralShorthandProperties": true,
        "restParams": true,
        "spread": true,
        "superInFunctions": true,
        "templateStrings": true
    }
}
